[*.{css,scss,sass,less,js,json,ts,html,hbs,mustache,phtml,html.twig,md,yml}]
charset = utf-8
indent_style = tab
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.yml]
indent_style = tab

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.php]
indent_style = tab
indent_size = 2

[package.json,.{babelrc,editorconfig,eslintrc,lintstagedrc,stylelintrc}]
indent_style = tab
indent_size = 2
